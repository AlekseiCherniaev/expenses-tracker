{
  "id": null,
  "uid": "app-metrics",
  "title": "Application Dashboard",
  "tags": ["fastapi", "prometheus", "application"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "type": "stat",
      "title": "Error Rate %",
      "id": 1,
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "100 * (sum(rate(http_requests_total{http_status=~\"5..\"}[5m])) / sum(rate(http_requests_total[5m])))",
          "legendFormat": "Error rate",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {"calcs": ["last"], "fields": "", "values": false},
        "orientation": "auto",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      }
    },
    {
      "type": "stat",
      "title": "Requests per second",
      "id": 2,
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[1m]))",
          "legendFormat": "RPS",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {"calcs": ["last"], "fields": "", "values": false},
        "orientation": "auto",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      }
    },
    {
      "type": "stat",
      "title": "95th Latency (ms)",
      "id": 3,
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le)) * 1000",
          "legendFormat": "p95",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {"calcs": ["last"], "fields": "", "values": false},
        "orientation": "auto",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      }
    },
    {
      "type": "timeseries",
      "title": "Requests per second (by method)",
      "id": 4,
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "rate(http_requests_total[1m])",
          "legendFormat": "{{method}} {{endpoint}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {"unit": "req/s"},
        "overrides": []
      },
      "options": {
        "legend": {"displayMode": "table", "placement": "bottom"}
      }
    },
    {
      "type": "timeseries",
      "title": "Request Latency (p50 / p95 / p99)",
      "id": 5,
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.5, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p99",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {"unit": "s"},
        "overrides": []
      },
      "options": {
        "legend": {"displayMode": "table", "placement": "bottom"}
      }
    },
    {
      "type": "table",
      "title": "Top Endpoints by RPS",
      "id": 6,
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "topk(10, sum(rate(http_requests_total[5m])) by (endpoint))",
          "legendFormat": "{{endpoint}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "table",
      "title": "Top Endpoints by Errors",
      "id": 7,
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "topk(10, sum(rate(http_requests_total{http_status=~\"5..\"}[5m])) by (endpoint))",
          "legendFormat": "{{endpoint}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Total Requests",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "sum(REQUEST_COUNT)",
          "legendFormat": "Total Requests"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Error Rate (5xx)",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "sum(rate(REQUEST_COUNT{http_status=~\"5..\"}[5m])) / sum(rate(REQUEST_COUNT[5m]))",
          "legendFormat": "5xx Error Rate"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 0.05 },
              { "color": "red", "value": 0.1 }
            ]
          }
        }
      }
    },
    {
      "type": "graph",
      "title": "Request Rate (per method)",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "sum(rate(REQUEST_COUNT[1m])) by (method)",
          "legendFormat": "{{method}}"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Latency (avg per endpoint)",
      "gridPos": { "x": 0, "y": 10, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "rate(REQUEST_LATENCY_sum[5m]) / rate(REQUEST_LATENCY_count[5m])",
          "legendFormat": "{{endpoint}}"
        }
      ]
    },
    {
      "type": "table",
      "title": "Top Endpoints by Requests",
      "gridPos": { "x": 0, "y": 16, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "sum(rate(REQUEST_COUNT[5m])) by (endpoint)",
          "legendFormat": "{{endpoint}}"
        }
      ],
      "transform": "timeseries_aggregations"
    },
    {
      "type": "graph",
      "title": "HTTP Status Codes Distribution",
      "gridPos": { "x": 0, "y": 22, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "sum(rate(REQUEST_COUNT[1m])) by (http_status)",
          "legendFormat": "{{http_status}}"
        }
      ]
    }
  ]
}
